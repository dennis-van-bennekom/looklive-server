                    <li class="navigation__item"><a href="https://looklive.com/brands/" class="navigation__link"><img class="navigation__image" src="/icons/png/brands.png">Brands</a></li>
                </ul>
            </div>
        </nav>

        <header class="header">
            <img src="/images/header-small.jpg"
                 srcset="/images/header-small.jpg 480w, /images/header-medium.jpg 960w, /images/header-large.jpg 1920w"
                 alt="House of Cards">
        </header>

        <div class="inner-wrapper">
            {{{body}}}
        </div>

        <script src="/js/app.js"></script>
